<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgIcono"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/icono_clima"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/txtCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ciudad"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripcion"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperatura_placeholder"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>

    <!--  Incluye un ícono del clima, el nombre de la ciudad, la descripción del clima y la temperatura.
     Este layout se usa en el adaptador PronosticoAdapter para representar visualmente cada ciudad con su clima actual o futuro. -->